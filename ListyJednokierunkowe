#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next;

    Node(int value) {
        data = value;
        next = nullptr;
    }
};

class LinkedList {
public:
    Node* head;

    LinkedList() {
        head = nullptr;
    }

    void insert(int x, int p) {
        Node* newNode = new Node(x);
        if (p == 0) {
            newNode->next = head;
            head = newNode;
            return;
        }

        Node* temp = head;
        for (int i = 0; temp != nullptr && i < p - 1; i++) {
            temp = temp->next;
        }

        if (temp == nullptr) return;

        newNode->next = temp->next;
        temp->next = newNode;
    }

    int locate(int x) {
        Node* temp = head;
        int pos = 0;
        while (temp != nullptr) {
            if (temp->data == x) return pos;
            temp = temp->next;
            pos++;
        }
        return -1;
    }

    int retrieve(int p) {
        Node* temp = head;
        for (int i = 0; temp != nullptr && i < p; i++) {
            temp = temp->next;
        }
        return temp != nullptr ? temp->data : -1;
    }

    void remove(int p) {
        if (head == nullptr) return;
        if (p == 0) {
            Node* temp = head;
            head = head->next;
            delete temp;
            return;
        }
        Node* temp = head;
        for (int i = 0; temp->next != nullptr && i < p - 1; i++) {
            temp = temp->next;
        }
        if (temp->next == nullptr) return;
        Node* toDelete = temp->next;
        temp->next = temp->next->next;
        delete toDelete;
    }

    int next(int p) {
        Node* temp = head;
        for (int i = 0; temp != nullptr && i < p; i++) {
            temp = temp->next;
        }
        return (temp != nullptr && temp->next != nullptr) ? p + 1 : -1;
    }

    int previous(int p) {
        return (p > 0) ? p - 1 : -1;
    }

    void makeNull() {
        Node* temp;
        while (head != nullptr) {
            temp = head;
            head = head->next;
            delete temp;
        }
    }

    int first() {
        return (head != nullptr) ? 0 : -1;
    }

    void printList() {
        Node* temp = head;
        while (temp != nullptr) {
            cout << temp->data << " -> ";
            temp = temp->next;
        }
        cout << "nullptr" << endl;
    }

    ~LinkedList() {
        makeNull();
    }
};

int main() {
    LinkedList list;
    list.insert(10, 0);
    list.insert(20, 1);
    list.insert(30, 2);
    list.insert(40, 3);
    list.insert(50, 4);
    list.insert(6000, 5);
    list.printList();
    cout << "Pozycja 20: " << list.locate(20) << endl;
    cout << "Element na pozycji 1: " << list.retrieve(1) << endl;
    list.remove(4);
    list.printList();
    cout << list.retrieve(3) << endl;
    cout << "NastÄ™pny po 0: " << list.next(0) << endl;
    cout << "Poprzedni po 1: " << list.previous(1) << endl;
    list.makeNull();
    list.printList();

    return 0;
}
